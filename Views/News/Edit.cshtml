@model Курсач.Models.News

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-4">
    <h1 class="text-center">Edit News</h1>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">News</h4>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />

                <div class="form-group">
                    <label asp-for="Title" class="control-label">Title</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Add" class="control-label">Added Date</label>
                    <input asp-for="Add" class="form-control" />
                    <span asp-validation-for="Add" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="text" class="control-label">News Text</label>
                    <input asp-for="text" class="form-control" />
                    <span asp-validation-for="text" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="mainImg" class="control-label">Image</label>
                    <input asp-for="mainImg" class="form-control" />
                    <span asp-validation-for="mainImg" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="text2" class="control-label">Additional Text 1</label>
                    <input asp-for="text2" class="form-control" />
                    <span asp-validation-for="text2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="text3" class="control-label">Additional Text 2</label>
                    <input asp-for="text3" class="form-control" />
                    <span asp-validation-for="text3" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="img2" class="control-label">Image 2</label>
                    <input asp-for="img2" class="form-control" />
                    <span asp-validation-for="img2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="img3" class="control-label">Image 3</label>
                    <input asp-for="img3" class="form-control" />
                    <span asp-validation-for="img3" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="isActive" class="control-label">Active</label>
                    <input asp-for="isActive" class="form-control" />
                    <span asp-validation-for="isActive" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
