@model Курсач.Models.News

@{
    ViewData["Title"] = "Редагування";
}

<div class="container mt-4">
    <h1 class="text-center">Редагування новини</h1>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Новина</h4>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />

                <div class="form-group">
                    <label asp-for="Title" class="control-label">Заголовок</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Add" class="control-label">Дата додавання</label>
                    <input asp-for="Add" class="form-control" />
                    <span asp-validation-for="Add" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="text" class="control-label">Текст новини</label>
                    <input asp-for="text" class="form-control" />
                    <span asp-validation-for="text" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="mainImg" class="control-label">Зображення</label>
                    <input asp-for="mainImg" class="form-control" />
                    <span asp-validation-for="mainImg" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="text2" class="control-label">Додатковий текст 1</label>
                    <input asp-for="text2" class="form-control" />
                    <span asp-validation-for="text2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="text3" class="control-label">Додатковий текст 2</label>
                    <input asp-for="text3" class="form-control" />
                    <span asp-validation-for="text3" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="img2" class="control-label">Зображення 2</label>
                    <input asp-for="img2" class="form-control" />
                    <span asp-validation-for="img2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="img3" class="control-label">Зображення 3</label>
                    <input asp-for="img3" class="form-control" />
                    <span asp-validation-for="img3" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="isActive" class="control-label">Активна</label>
                    <input asp-for="isActive" class="form-control" />
                    <span asp-validation-for="isActive" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Зберегти</button>
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">Повернутися до списку</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
