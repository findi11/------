@model Курсач.Models.Containers

@{
    ViewData["Title"] = "Details";
}

<h1 class="display-4 mb-4 text-center">
    Details - @DateTime.Now.ToString("MMMM dd, yyyy")
</h1>

<div class="container mt-4">
    <h4 class="mb-4 text-center">Container Information</h4>
    <hr />

    <dl class="row fs-5">
        <dt class="col-sm-2">Container</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.container)</dd>

        <dt class="col-sm-2">Person ID</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.PersonId)</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DataStart)</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DataEnd)</dd>

        <dt class="col-sm-2">Current Progress</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.currentProgres)</dd>

        <dt class="col-sm-2">End Progress</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.endProgres)</dd>
    </dl>
</div>

<div class="container mt-4">
    <div class="row text-center">
        @{
            var isAdminCookie1 = Context.Request.Cookies["IsAdmin"];
            var showElement11 = User.Identity.IsAuthenticated || (isAdminCookie1 != null && isAdminCookie1.ToLower() == "true");
        }
        @if (showElement11)
        {
            <div class="col-md-6">
                <a class="btn btn-primary fs-5" asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
            </div>
        }
        <div class="col-md-6">
            <a class="btn btn-secondary fs-5" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

