@model IEnumerable<Курсач.Models.Containers>

<div class="all-container">
    <div class="app-container">
        @foreach (var item in Model)
        {
            <div class="flex-item">
                <div class="card-content">
                    <div class="card-title">ID: @item.ID</div>
                    <div class="card-type">Type: @item.container</div>
                    <div class="progress-info">Collected: @item.currentProgres <br />Remaining: @item.endProgres - @item.currentProgres</div>
                </div>
                <a href="@Url.Action("Details", "Containers", new { id = item.ID })" class="details-link">Details</a>
            </div>
        }
    </div>
</div>

<style>
    .all-container {
        padding: 64px;
        width: calc(100% - 128px);
        margin: 20px auto;
        text-align: center;
    }

    .app-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        margin-right: -15px;
        overflow: hidden;
        margin-left: -15px;
    }

    .flex-item {
        box-sizing: border-box;
        flex: 0 0 calc(33.33% - 30px);
        margin: 15px;
        border: 1px solid #ddd;
        height:300px;
        padding: 20px;
        position: relative;
        overflow: hidden;
        transition: background-color 0.3s ease-in-out, transform 0.3s ease-in-out;
        border-radius: 15px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .flex-item:hover {
        background-color: #f8f9fa;
        transform: scale(1.05);
    }

    .card-content {
        text-align: center;
        position: relative;
        z-index: 0;
    }

    .card-title {
        font-size: 1.5em;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .card-type {
        font-style: italic;
        margin-bottom: 10px;
    }

    .progress-info {
        margin-bottom: 20px;
    }

    .details-link {
        text-decoration: none;
        color: red;
        font-weight: 600;
        padding: 10px 20px;
        border: 2px solid red;
        border-radius: 10px;
        transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out;
        opacity: 0;
        z-index: 2;
        position: absolute;
        bottom: 10px;
        width:100%;
        left: 50%;
        transform: translateX(-50%);
    }

    .flex-item:hover .details-link {
        opacity: 1;
    }

    .details-link:hover {
        background-color: red;
        color: white;
    }
</style>
